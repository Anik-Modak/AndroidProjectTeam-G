<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.bachelorshelter.anik.medicaladviser.activities.DermatologistActivity">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/der1"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:text="Professor Dr. A. Z. M. Maidul Islam\nFormer Chairman, Department of Dermatology, BSMMU\nPhone: +880 1722068043"
        tools:ignore="LabelFor,MissingConstraints,TextFields"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />
    <Button
        android:id="@+id/videoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/dot_dark_screen1"
        android:text="video Conference"
        android:textStyle="bold"
        tools:ignore="DuplicateIds" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/der2"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:text="\n\n\nProfessor Dr. Mir Nazrul Islam\nDepartment of Dermatology,BIRDEM and Ibrahim Medical College\nPhone: +880 1722068043"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="LabelFor,MissingConstraints,TextFields"/>

    <Button
        android:id="@+id/videoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/dot_dark_screen1"
        android:text="video Conference"
        android:textStyle="bold"
        tools:ignore="DuplicateIds" />

</LinearLayout>

